<jqa:jqassistant-rules xmlns:jqa="http://www.buschmais.com/jqassistant/core/rule/schema/v1.3">

  <!-- https://github.com/buschmais/jqa-core-framework/blob/master/rule/src/main/resources/META-INF/xsd/jqassistant-rules-1.4.xsd -->

  <group id="john-lakos-metrics:DependsUponUsedFrom">
    <includeConcept refId="john-lakos-metrics:PackagesDependsUponPackageA"/>
  </group>

  <concept id="john-lakos-metrics:PackagesDependsUponPackageA" severity="major">
    <requiresConcept refId="john-lakos-metrics:PackagesDependsUpon"/>
    <description>Counts all packages this package depends upon inclusive the package itself.</description>
    <cypher><![CDATA[
      MATCH (p:Package {fqn:"your.project.johnlakos.a", dependsUpon:1})
      RETURN p
    ]]></cypher>
  </concept>

</jqa:jqassistant-rules>
